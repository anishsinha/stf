@model BrokerFuelRequestFeeViewModel
<div class="row">
    <div class="col-sm-12">
        <h4 class="f-light fs18 border-b pb10 mt10">@Resource.headingFees</h4>
        <div class="row mt15">
            <div class="col-xs-12 mb5 main-section">
                <div class="row">
                    <div class="col-sm-2 mt10">@Html.LabelFor(m => m.WetHoseFeeSubTypeId)</div>
                    @Html.PartialFor("_PartialBrokerMargin", m => m.WetHoseMargin)
                </div>
                <div class="row override defaultDisabled">
                    <div class="col-sm-12 no-sm-padding">
                        <div class="col-sm-12 bg-lightgrey pl0 pr0">
                            <div class="row">
                                <div class="col-md-2 col-xs-6 col-sm-2 col-sm-offset-2">
                                    <div class="form-group mb0">
                                        <div class="radio">
                                            <label>
                                                @Html.RadioButtonFor(m => m.WetHoseFeeSubTypeId, (int)FeeSubType.NoFee, new { onclick = "radioChange(this,null,'wethosefee')" })
                                                @Resource.lblNoFee
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2 col-xs-6 col-sm-2">
                                    <div class="form-group mb0">
                                        <div class="radio">
                                            <label>
                                                @Html.RadioButtonFor(m => m.WetHoseFeeSubTypeId, (int)FeeSubType.ByAssetCount, new { onclick = "radioChange(this,'wethosefee',null)", onchange = "focusOnFirst(this, 'wethosefee')" })
                                                @Resource.lblPerAsset
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2 col-xs-6 col-sm-2">
                                    <div class="form-group mb0">
                                        <div class="radio">
                                            <label>
                                                @Html.RadioButtonFor(m => m.WetHoseFeeSubTypeId, (int)FeeSubType.HourlyRate, new { onclick = "radioChange(this,'wethosefee',null)", onchange = "focusOnFirst(this, 'wethosefee')" })
                                                @Resource.lblHourlyRate
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2 mt5 mb5 col-xs-6 col-sm-3">
                                    <div class="form-group mb0">
                                        <div class="input-group mtm1 wethosefee">
                                            <span class="input-group-addon">@Resource.constSymbolCurrency</span>
                                            @Html.TextBoxFor(m => m.WetHoseFee, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.WetHoseFee)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt15">
            <div class="col-xs-12 mb5 main-section">
                <div class="row">
                    <div class="col-sm-2 mt10">@Html.LabelFor(m => m.OverWaterFeeSubTypeId)</div>
                    @Html.PartialFor("_PartialBrokerMargin", m => m.OverWaterMargin)
                </div>
                <div class="col-sm-12 pr0 pl0 bg-lightgrey">
                    <div class="row override defaultDisabled">
                        <div class="col-md-2 col-xs-6 col-sm-2 col-sm-offset-2">
                            <div class="form-group mb0">
                                <div class="radio">
                                    <label>
                                        @Html.RadioButtonFor(m => m.OverWaterFeeSubTypeId, (int)FeeSubType.NoFee, new { onclick = "radioChange(this,null,'overwaterfee')" })
                                        @Resource.lblNoFee
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 col-xs-6 col-sm-2">
                            <div class="form-group mb0">
                                <div class="radio">
                                    <label>
                                        @Html.RadioButtonFor(m => m.OverWaterFeeSubTypeId, (int)FeeSubType.ByAssetCount, new { onclick = "radioChange(this,'overwaterfee',null)", onchange = "focusOnFirst(this, 'overwaterfee')" })
                                        @Resource.lblPerAsset
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 col-xs-6 col-sm-2">
                            <div class="form-group mb0">
                                <div class="radio">
                                    <label>
                                        @Html.RadioButtonFor(m => m.OverWaterFeeSubTypeId, (int)FeeSubType.HourlyRate, new { onclick = "radioChange(this,'overwaterfee',null)", onchange = "focusOnFirst(this, 'overwaterfee')" })
                                        @Resource.lblHourlyRate
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 mt5 mb5 col-xs-6 col-sm-3">
                            <div class="form-group mb0">
                                <div class="input-group mtm1 overwaterfee">
                                    <span class="input-group-addon">@Resource.constSymbolCurrency</span>
                                    @Html.TextBoxFor(m => m.OverWaterFee, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.OverWaterFee)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt15">
            <div class="col-xs-12 mb5 main-section">
                <div class="row">
                    <div class="col-sm-2 mt10">@Html.LabelFor(m => m.DryRunFeeSubTypeId)</div>
                    @Html.PartialFor("_PartialBrokerMargin", m => m.DryRunMargin)
                </div>
                <div class="col-sm-12 bg-lightgrey pr0 pl0">
                    <div class="row override defaultDisabled">
                        <div class="col-md-2 col-xs-6 col-sm-2 col-sm-offset-2">
                            <div class="form-group mb0">
                                <div class="radio">
                                    <label>
                                        @Html.RadioButtonFor(m => m.DryRunFeeSubTypeId, (int)FeeSubType.NoFee, new { onclick = "radioChange(this,null,'dryrunfee')" })
                                        @Resource.lblNoFee
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 col-xs-6 col-sm-2">
                            <div class="form-group mb0">
                                <div class="radio">
                                    <label>
                                        @Html.RadioButtonFor(m => m.DryRunFeeSubTypeId, (int)FeeSubType.FlatFee, new { onclick = "radioChange(this,'dryrunfee',null)", onchange = "focusOnFirst(this, 'dryrunfee')" })
                                        @Resource.lblFlatFee
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 mt5 mb5 col-xs-6 col-sm-3">
                            <div class="form-group mb0">
                                <div class="input-group mtm1 dryrunfee">
                                    <span class="input-group-addon">@Resource.constSymbolCurrency</span>
                                    @Html.TextBoxFor(m => m.DryRunFee, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.DryRunFee)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt15">
            <div class="col-xs-12 mb5 main-section">
                <div class="row">
                    <div class="col-sm-2 mt10">@Html.LabelFor(m => m.UnderGallonFeeSubTypeId)</div>
                    @Html.PartialFor("_PartialBrokerMargin", m => m.UnderGallonMargin)
                </div>
                <div class="col-sm-12 pr0 pl0 bg-lightgrey">
                    <div class="row override defaultDisabled">
                        <div class="col-md-2 col-sm-2 col-xs-6 col-sm-offset-2">
                            <div class="form-group mb0">
                                <div class="radio">
                                    <label>
                                        @Html.RadioButtonFor(m => m.UnderGallonFeeSubTypeId, (int)FeeSubType.NoFee, new { onclick = "radioChange(this,null,'undergallonfee')" })
                                        @Resource.lblNoFee
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 col-sm-2 col-xs-6">
                            <div class="form-group mb0">
                                <div class="radio">
                                    <label>
                                        @Html.RadioButtonFor(m => m.UnderGallonFeeSubTypeId, (int)FeeSubType.FlatFee, new { onclick = "radioChange(this,'undergallonfee',null)", onchange = "focusOnFirst(this, 'undergallonfee')" })
                                        @Resource.lblFlatFee
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 col-sm-3 col-xs-6 mt5 mb5">
                            <div class="form-group mb0">
                                <div class="mtm1 undergallonfee">
                                    @Html.TextBoxFor(m => m.MinimumGallons, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.MinimumGallons)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 col-sm-3 col-xs-6 mt5 mb5">
                            <div class="form-group mb0">
                                <div class="input-group mtm1 undergallonfee">
                                    <span class="input-group-addon">@Resource.constSymbolCurrency</span>
                                    @Html.TextBoxFor(m => m.UnderGallonFee, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.UnderGallonFee)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt15">
            <div class="col-md-12 no-sm-padding">
                <div class="col-xs-12 mb5 main-section">
                    <div class="row">
                        <div class="col-sm-2 mt10">@Html.LabelFor(m => m.DeliveryFeeSubTypeId)</div>
                        @Html.PartialFor("_PartialBrokerMargin", m => m.DeliveryMargin)
                    </div>
                    <div class="row bg-lightgrey override defaultDisabled">
                        <div class="col-md-2 col-xs-6 col-sm-2 col-sm-offset-2">
                            <div class="radio mt7">
                                <label>
                                    @Html.RadioButtonFor(m => m.DeliveryFeeSubTypeId, (int)FeeSubType.NoFee, new { onclick = "radioChange(this,null,'delivery-fee,fee-flatfee')" })
                                    @Resource.lblNoFee
                                </label>
                            </div>
                        </div>
                        <div class="col-md-2 col-xs-6 col-sm-2">
                            <div class="radio mt7">
                                <label>
                                    @Html.RadioButtonFor(m => m.DeliveryFeeSubTypeId, (int)FeeSubType.FlatFee, new { onclick = "inputBoxShowHide('fee-flatfee','delivery-fee'),radioChange(this,'fee-flatfee,flatfee-input','flatfee-fromUp')", onchange = "focusOnFirst(this, 'fee-flatfee')" })
                                    @Resource.lblFlatFee
                                </label>
                            </div>
                        </div>
                        <div class="col-md-2 col-xs-6 col-sm-2">
                            <div class="radio mt7">
                                <label>
                                    @Html.RadioButtonFor(m => m.DeliveryFeeSubTypeId, (int)FeeSubType.PerGallon, new { onclick = "inputBoxShowHide('fee-flatfee','delivery-fee'),radioChange(this,'fee-flatfee,flatfee-input','flatfee-fromUp')", onchange = "focusOnFirst(this, 'fee-flatfee')" })
                                    @Resource.lblPerGallon
                                </label>
                            </div>
                        </div>
                        <div class="col-xs-6 col-sm-3 col-md-2">
                            <div class="radio mt7">
                                <label>
                                    @Html.RadioButtonFor(m => m.DeliveryFeeSubTypeId, (int)FeeSubType.ByQuantity, new { onclick = "inputBoxShowHide('delivery-fee','fee-flatfee'),radioChange(this,'delivery-fee','fee-flatfee')", onchange = "focusOnFirst(this, 'delivery-fee')" })
                                    @Resource.lblByQuantity
                                </label>
                            </div>
                        </div>

                        <div class="col-sm-12 col-md-4 col-md-push-8 mt5 mb5">
                            <div id="deliveryfee-byquantity-section" class="partial-section quantity-range delivery-fee @(Model.DeliveryFeeSubTypeId == (int)FeeSubType.ByQuantity ? "show-element" : "hide-element")">
                                <div class="partial-block-collection-section fee-byquantity">
                                    @if (Model.DeliveryFeeByQuantity != null && Model.DeliveryFeeByQuantity.Count() > 0)
                                    {
                                        foreach (var deliveryfeebyquantity in Model.DeliveryFeeByQuantity)
                                        {
                                            Html.RenderPartial("_PartialDeliveryFeeByQuantity", deliveryfeebyquantity);
                                        }
                                    }
                                </div>
                                <div class="row">
                                    <div class="col-sm-10 col-sm-offset-2 col-md-12 col-md-offset-0">
                                        <div class="form-group mt7">
                                            <a href="javascript:void(0)" onclick="AjaxStart(this)" class="add-partial-block" data-url="@Url.Action("DeliveryFeeByQuantity", "Broker", new { area = "Supplier" })"><span class="fa fa-plus-circle"></span> @Resource.btnLabelAddDeliveryFee</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row fee-flatfee @(Model.DeliveryFeeSubTypeId != (int)FeeSubType.ByQuantity ? "show-element" : "hide-element")">
                                <div class="col-sm-10 col-md-12 col-sm-offset-2 col-md-offset-0">
                                    <div class="row">
                                        <div class="col-xs-6 col-sm-3 pr5 flatfee-fromUp">
                                            <div class="form-group mb5">
                                                <input type="text" placeholder="From" class="form-control" disabled />
                                            </div>
                                        </div>
                                        <div class="col-xs-6 col-sm-3 pl0 pr5 flatfee-fromUp">
                                            <div class="form-group mb5">
                                                <input type="text" placeholder="Upto" class="form-control" disabled />
                                            </div>
                                        </div>
                                        <div class="col-xs-6 col-sm-3 pl0 pr5">
                                            <div class="input-group flatfee-input" style="display:inline-table">
                                                <span class="input-group-addon">@Resource.constSymbolCurrency</span>
                                                @Html.TextBoxFor(m => m.DeliveryFee, new { @class = "form-control", placeholder = @Html.DisplayNameFor(m => m.DeliveryFee) })
                                            </div>
                                            @Html.ValidationMessageFor(m => m.DeliveryFee)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt15">
            <div class="col-md-12 no-sm-padding">
                <div class="col-xs-12 mb5 main-section">
                    <div class="row">
                        <div class="col-sm-2 mt10">@Html.Label(@Resource.lblAdditionalFee)</div>
                        @Html.PartialFor("_PartialBrokerMargin", m => m.AdditionalFeeMargin)
                    </div>
                    <div class="row bg-lightgrey pt5 override defaultDisabled">
                        <div class="col-sm-12 col-md-9 pb15 pt10">
                            <div id="additional-fee-section" class="partial-section">
                                <div class="partial-block-collection-section">
                                    @if (Model.AdditionalFee != null && Model.AdditionalFee.Count() > 0)
                                    {
                                        foreach (var additionalfee in Model.AdditionalFee)
                                        {
                                            Html.RenderPartial("_PartialBrokerAdditionalFee", additionalfee);
                                        }
                                    }
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-12 mt7 mb0">
                                        <a href="javascript:void(0)" class="add-partial-block" data-url="@Url.Action("AdditionalFee", "Broker",new { area="Supplier"})"><span class="fa fa-plus-circle"></span> @Resource.btnLabelAddAdditionalFee</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
