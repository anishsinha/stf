@model List<FuelSurchargeTableViewModel>

<div class="col-sm-12">
	<table class="table">
		<thead>
			<tr>
				<th class="text-center" width="47%">@Resource.lblPriceBetween</th>
				<th class="text-center" width="48%">@Resource.lblFuelSurchargePercent</th>
			</tr>
		</thead>
	</table>
	<div style="max-height:300px;overflow:auto" id="surchargeTable">
		<table class="table table-bordered table-hover mb0">
			<tbody>
				@for (int i = 0; i < Model.Count; i++)
				{
					@Html.HiddenFor(m => m[i].SupplierId, new { id="hdnSupplierId"})
					@Html.HiddenFor(m => m[i].Id, new { id = "" + i + "__Id", @Name = "[" + i + "].Id" })
					@Html.HiddenFor(m => m[i].PriceRangeStartValue, new { id = "" + i + "__PriceRangeStartValue", @Name = "[" + i + "].PriceRangeStartValue" })
					@Html.HiddenFor(m => m[i].PriceRangeEndValue, new { id = "" + i + "__PriceRangeEndValue", @Name = "[" + i + "].PriceRangeEndValue" })
					<tr>
						<td class="text-center vmiddle" width="50%">@Resource.constSymbolCurrency@Model[i].PriceRangeStartValue - @Resource.constSymbolCurrency@Model[i].PriceRangeEndValue</td>
						<td width="50%">
							<div class="input-group div-surcharge-percent">
								@Html.TextBoxFor(m => m[i].FuelSurchargeStartPercentage, new { @class = "form-control text-center", id = "" + i + "__FuelSurchargeStartPercentage", @Name = "[" + i + "].FuelSurchargeStartPercentage" })
								<span class="input-group-addon">@Resource.constSymbolPercent</span>
							</div>
							<span class="hide-element span-surcharge-percent">@Model[i].FuelSurchargeStartPercentage@Resource.constSymbolPercent</span>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>