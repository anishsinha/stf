@model AssetDetailViewModel

<div class="row">
    <div class="col-md-6 col-sm-12">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(m => m.Asset.Name):
            </dt>
            <dd>
                @Html.DisplayFor(m => m.Asset.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(m => m.Asset.AssetAdditionalDetail.Make):
            </dt>
            <dd>
                @(string.IsNullOrEmpty(Model.Asset.AssetAdditionalDetail.Make) ? Resource.lblHyphen : Model.Asset.AssetAdditionalDetail.Make)
            </dd>

            <dt>
                @Html.DisplayNameFor(m => m.Asset.AssetAdditionalDetail.Model)
            </dt>
            <dd>
                @(string.IsNullOrEmpty(Model.Asset.AssetAdditionalDetail.Model) ? Resource.lblHyphen : Model.Asset.AssetAdditionalDetail.Model)
            </dd>

            <dt>
                @Html.DisplayNameFor(m => m.Asset.AssetAdditionalDetail.Class):
            </dt>
            <dd>
                @(string.IsNullOrEmpty(Model.Asset.AssetAdditionalDetail.Class) ? Resource.lblHyphen : Model.Asset.AssetAdditionalDetail.Class)
            </dd>

            <dt>
                @Html.DisplayNameFor(m => m.Asset.AssetAdditionalDetail.Year):
            </dt>
            <dd>
                @(string.IsNullOrEmpty(Model.Asset.AssetAdditionalDetail.Year) ? Resource.lblHyphen : Model.Asset.AssetAdditionalDetail.Year)
            </dd>

            <dt>
                @Html.DisplayNameFor(m => m.Asset.AssetAdditionalDetail.Color):
            </dt>
            <dd>
                @(string.IsNullOrEmpty(Model.Asset.AssetAdditionalDetail.Color) ? Resource.lblHyphen : Model.Asset.AssetAdditionalDetail.Color)
            </dd>

            <dt>
                @Html.DisplayNameFor(m => m.Asset.AssetAdditionalDetail.VehicleId):
            </dt>
            <dd>
                @(string.IsNullOrEmpty(Model.Asset.AssetAdditionalDetail.VehicleId) ? Resource.lblHyphen : Model.Asset.AssetAdditionalDetail.VehicleId)
            </dd>

            <dt>
                @Html.DisplayNameFor(m => m.Asset.AssetAdditionalDetail.LicensePlateState):
            </dt>
            <dd>
                @(Model.Asset.AssetAdditionalDetail.LicensePlateState == null ? Resource.lblHyphen : Model.Asset.AssetAdditionalDetail.LicensePlateState)
            </dd>

            <dt>
                @Html.DisplayNameFor(m => m.Asset.AssetAdditionalDetail.LicensePlate):
            </dt>
            <dd>
                @(string.IsNullOrEmpty(Model.Asset.AssetAdditionalDetail.LicensePlate) ? Resource.lblHyphen : Model.Asset.AssetAdditionalDetail.LicensePlate)
            </dd>

            <dt>
                @Html.DisplayNameFor(m => m.Asset.CreatedDate):
            </dt>
            <dd>
                @(Model.Asset.CreatedDate.ToString(Resource.constFormatDate))
            </dd>
        </dl>
    </div>
    <div class="col-md-6 col-sm-12">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(m => m.Asset.FuelType.Name):
            </dt>
            <dd>
                @(Model.Asset.FuelType == null ? Resource.lblHyphen : Model.Asset.FuelType.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(m => m.Asset.AssetAdditionalDetail.FuelCapacity):
            </dt>
            <dd>
                @(Model.Asset.AssetAdditionalDetail.FuelCapacity == null ? Resource.lblHyphen : Model.Asset.AssetAdditionalDetail.FuelCapacity.Value.ToString() + " " + Model.UoM)
            </dd>

            <dt>
                @Html.DisplayNameFor(m => m.JobName):
            </dt>
            <dd>
                @(string.IsNullOrEmpty(Model.JobName) ? Resource.lblHyphen : Model.JobName)
            </dd>

            <dt>
                @Html.DisplayNameFor(m => m.DateAssigned):
            </dt>
            <dd>
                @(Model.DateAssigned == null ? Resource.lblHyphen : Model.DateAssigned.Value.ToString(Resource.constFormatDate))
            </dd>

            <dt>
                @Html.DisplayNameFor(m => m.TotalDrops):
            </dt>
            <dd>
                @Html.DisplayFor(m => m.TotalDrops)
            </dd>

            <dt>
                @Html.DisplayNameFor(m => m.TotalFuel):
            </dt>
            <dd>
                @Model.TotalFuel @Model.UoM
            </dd>

            <dt>
                @Html.DisplayNameFor(m => m.TotalFuelCost):
            </dt>
            <dd>
                @(Model.TotalFuelCost > 0 ? $"{Resource.constSymbolCurrency}{Model.TotalFuelCost} {Model.Currency}": Resource.lblHyphen)
            </dd>

            <dt>
                @Html.DisplayNameFor(m => m.Asset.AssetAdditionalDetail.Vendor):
            </dt>
            <dd>
                @(string.IsNullOrEmpty(Model.Asset.AssetAdditionalDetail.Vendor) ? Resource.lblHyphen : Model.Asset.AssetAdditionalDetail.Vendor)
            </dd>

            <dt>
                @Html.DisplayNameFor(m => m.Asset.AssetAdditionalDetail.TelematicsProvider):
            </dt>
            <dd>
                @(string.IsNullOrEmpty(Model.Asset.AssetAdditionalDetail.TelematicsProvider) ? Resource.lblHyphen : Model.Asset.AssetAdditionalDetail.TelematicsProvider)
            </dd>

            <dt>
                @Html.DisplayNameFor(m => m.Asset.AssetAdditionalDetail.Description):
            </dt>
            <dd>
                @(string.IsNullOrEmpty(Model.Asset.AssetAdditionalDetail.Description) ? Resource.lblHyphen : Model.Asset.AssetAdditionalDetail.Description)
            </dd>
        </dl>
    </div>
</div>