<div class="col-sm-12">
    <div class="row">
        <div class="well pb10 mb10 col-sm-12">
            <div class="row">
                <div class="col-sm-4 col-xs-12 text-left pt8">
                    <h2 class="mb0"><span class="fa mr2"><i class="fas fa-download"></i></span> <span class="font-bold">@Resource.lblDownloadApp</span></h2> 
                </div>
                <div class="col-sm-8 col-xs-12 text-right mt5-xs">
                    <input class="fa fa-filter mr5 fs16" type="image" style="width: 140px;" src="~/Content/images/ico-google-play.png" id="AndroidStore" value="Android" />
                    <input class="fa fa-filter mr5 fs16" type="image" style="width: 140px;" src="~/Content/images/ico-app-store.png" id="AppleStore" value="Iphone" />
                </div>
            </div>
        </div>
    </div>
</div>


    <script>

        $(document).ready(function () {
            $("#AndroidStore").click(function () {
                url = 'https://play.google.com/store/apps/details?id=com.sitefuelusa.driver.android&hl=en_IN';
                window.open(url, '_blank');
            });

            $("#AppleStore").click(function () {
                url = 'https://apps.apple.com/us/app/truefill-driver/id1201656804';
                window.open(url, '_blank');
            });

        });

    </script>
