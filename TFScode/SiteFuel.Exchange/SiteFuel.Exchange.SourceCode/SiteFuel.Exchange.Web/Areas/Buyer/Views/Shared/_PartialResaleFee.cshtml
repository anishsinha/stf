@model FuelRequestResaleFeeViewModel

@using (Html.BeginCollectionItem("FuelDeliveryDetails.FuelRequestFee.ResaleFee"))
{
    <div class="partial-block">
        <div class="row">
            @Html.HiddenFor(m => m.FeeTypeId)
            <div class="col-sm-3 col-xs-6">
                <div class="form-group mb5">
                    @Html.DropDownListFor(m => m.FeeSubTypeId, new SelectList(CommonHelperMethods.GetResaleFeeTypes(), "Id", "Name", 0), new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FeeSubTypeId)
                </div>
            </div>
            <div class="col-xs-5 col-sm-2 pl0">
                <div class="input-group">
                    <span class="input-group-addon">@Model.Currency</span>
                    @Html.TextBoxFor(m => m.Fee, new { @class = "form-control", placeholder = @Html.DisplayNameFor(m => m.Fee) })
                </div>
                @Html.ValidationMessageFor(m => m.Fee)
            </div>
            <div class="fs18">
                <a href="javascript:void(0)" class="fa fa-trash-alt mt10 color-maroon" title="@Resource.btnLabelRemove" onclick="removePartial(this);"></a>
            </div>
        </div>
    </div>
}