@model QuoteRequestDataTableModel
@{
    ViewBag.Title = "Quote Request Summary";
}
<div class="row">
    <div class="col-sm-7 col-md-9">
        <h4>@Resource.lblQuoteRequests</h4>
    </div>
    @if (Model.JobId == 0)
    {
        <div class="col-sm-5 col-md-3">
            @Html.PartialFor("~/Views/Shared/_PartialCurrencyFilter.cshtml", m => m.Country)
        </div>
    }
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="well pb10 mb10">
            <div class="row">
                <div class="col-xs-12 col-sm-2 col-md-1 pt5 pr0"><i class="fa fa-filter mr5 fs16"></i><label class="f-normal fs16">@Resource.lblFilter</label></div>
                <div class="col-xs-6 col-sm-3 col-md-2 mb5"><input type="text" id="txtQuoteRQFromDate" placeholder="@Resource.lblFrom" class="form-control datepicker" /></div>
                <div class="col-xs-6 col-sm-3 col-md-2 mb5"><input type="text" id="txtQuoteRQToDate" placeholder="@Resource.lblTo" class="form-control datepicker" /></div>
                <div class="col-xs-12 col-sm-4 col-md-3">
                    <input id="btnApply" type="button" class="btn btn-primary" value="@Resource.btnLabelApply" onclick="ReloadDataTable();" />
                    <input id="btnClear" type="button" class="btn ml5" value="@Resource.btnLabelClearFilter" onclick="ClearFilter();" />
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("_PartialQuoteRequestsGrid", Model)
