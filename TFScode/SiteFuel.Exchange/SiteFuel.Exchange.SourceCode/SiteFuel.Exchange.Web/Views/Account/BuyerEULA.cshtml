@model int

@{
    ViewBag.Title = "Buyer EULA";
    Layout = "~/Views/Shared/_LayoutError.cshtml";
}
@using (Html.BeginForm())
{
    <div class="container">
        <div class="row">
            @if (!string.IsNullOrEmpty(ViewBag.SupplierLogoURL))
            {
                <div class="col-sm-12 mt20 text-center"><img src="@ViewBag.SupplierLogoURL" width="120" /></div>
                <span id="supplierBrandText" class="fs10 db mb5 text-center">Powered By TrueFill</span>
            }
            else
            {
                <div class="col-sm-12 mt20 text-center"><img src="~/Content/images/truefill-logo.png" width="120" /></div>
            }
            <div class="col-sm-12 text-center"><h2>@Resource.headingEULA</h2></div>
            <div class="col-sm-10 col-sm-offset-1">
                <div class="col-md-12 eula-box">
                    @Html.GetFormattedResource(Resource.txtOnboardingEULA)
                </div>
            </div>
            <div class="text-center col-sm-12 mt20">
                <input type="submit" id="btnEulaAccept" class="btn btn-primary" value="@Resource.btnLabelAccept" />
            </div>
        </div>
    </div>
}

@using (Html.BeginScripts())
{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnEulaAccept").click(function (e) {
                $("form").attr("action", "@Url.Action("EulaAccepted", "Account", new { area = "", id = Model })");
            });
        });
    </script>
}


