@model SupportViewModel

@{
    ViewBag.Title = "Support";
}

@using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { id = "support-form" }))
{
    @Html.AntiForgeryToken()
<div class="col-sm-12">
    <div class="row well">
        <div class="col-sm-12">
            <h4>@Resource.headingSupport</h4>
            <div class="row">
                <div class="col-sm-4">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                @Resource.lblPhoneNumber
                                @Html.Label(Model.SupportContactNumber, new { @class = "font-bold full-width mt5" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Subject)
                                @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", autofocus = "autofocus" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Question)
                                @Html.TextAreaFor(m => m.Question, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>@Resource.lblContactBy</label>
                                <div class="row">
                                    <div class="col-sm-4 mt7">
                                        <div class="form-check form-check-inline">
                                            @Html.CheckBoxFor(m => m.IsContactByPhoneNumber,new { @class = "form-check-input" ,@id= "checkbox-phonenumber" })
                                            <label class="form-check-label" for="checkbox-phonenumber">@Resource.lblPhoneNumber</label>
                                        </div>
                                    </div>
                                    <div class="col-xs-7 pl0">
                                        <div class="form-group">
                                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control phone", @readonly = true })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-4 mt7">
                                        <div class="form-check form-check-inline">
                                            @Html.CheckBoxFor(m => m.IsContactByEmail, new { @class = "form-check-input", @id = "checkbox-email" })
                                            <label class="form-check-label" for="checkbox-email">@Resource.lblEmail</label>
                                        </div>
                                    </div>
                                    <div class="col-xs-7 pl0">
                                        <div class="form-group">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @readonly = true })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 text-right">
            <input type="button" class="btn" value="@Resource.btnLabelCancel" onclick="location.href='@Url.Action("Index", "Home", new { area = "" })'" />
            <input type="submit" class="btn btn-primary btn-lg disable-when-no-partialblock" value="@Resource.btnLabelSave" />
        </div>
    </div>
</div>
}