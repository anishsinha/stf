@model SiteFuel.Exchange.ViewModels.FileModel

@using (Html.BeginForm("ImageBulkUpload", "Invoice", new { area = "Supplier" }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.InvoiceFiles, htmlAttributes: new { @class = "form-control" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.InvoiceFiles, "", new { @type = "file", @multiple = "multiple", @class= "form-control" })
                @Html.ValidationMessageFor(model => model.InvoiceFiles, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Upload" class="btn btn-primary" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 text-success">
                @ViewBag.UploadStatus
            </div>
        </div>

    </div>
}
