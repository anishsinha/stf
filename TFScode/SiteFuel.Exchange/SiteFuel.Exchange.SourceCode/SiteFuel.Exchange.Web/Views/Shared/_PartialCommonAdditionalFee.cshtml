@model AdditionalFeeViewModel

<div class="row">
    @Html.HiddenFor(m => m.FeeTypeId)
    <div class="col-xs-7 col-sm-3">
        <div class="form-group mb5">
            @Html.DropDownListFor(m => m.FeeSubTypeId, new SelectList(CommonHelperMethods.GetAdditionalFee(), "Id", "Name", 0), new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FeeSubTypeId)
        </div>
    </div>
    <div class="col-xs-5 col-sm-3">
        <div class="input-group">
            <span class="input-group-addon">@Resource.constSymbolCurrency</span>
            @Html.TextBoxFor(m => m.Fee, new { @class = "form-control", placeholder = @Html.DisplayNameFor(m => m.Fee) })
        </div>
        @Html.ValidationMessageFor(m => m.Fee)
    </div>
    <div class="col-xs-7 col-sm-3">
        <div class="form-group mb5">
            @Html.TextAreaFor(m => m.FeeDetails, new { @class = "form-control", placeholder = @Html.DisplayNameFor(m => m.FeeDetails) })
            @Html.ValidationMessageFor(m => m.FeeDetails)
        </div>
    </div>
    <div class="col-xs-5 pr0 col-sm-2 hide-element show-in-tpo">
        <div class="checkbox">
            <label>
                @Html.CheckBoxFor(m => m.IncludeInPPG)
                @Resource.lblIncludeInPPG
            </label>
        </div>
    </div>
    <div class="fs18 col-xs-1">
        <a href="javascript:void(0)" class="fa fa-trash-alt mt10 color-maroon" title="@Resource.btnLabelRemove" onclick="removePartial(this);"></a>
    </div>
</div>
