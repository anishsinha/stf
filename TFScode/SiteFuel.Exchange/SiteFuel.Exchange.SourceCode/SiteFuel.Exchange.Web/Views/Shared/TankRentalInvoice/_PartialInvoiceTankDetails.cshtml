@model TankDetailsViewModel
<div class="pl15 pr15 tank-row">
    @Html.HiddenFor(m => m.IsToBeIncludedInInvoice, new { @class = "hdn-include-in-invoice" })
    @Html.HiddenFor(m => m.BillingFrequencyId)
    <div class="row">
        <div class="col-sm-12">
            <div class="btn-group btn-group-toggle btn-filter pa right0 mt10 mr15 z-index5 enable discard-include shadow-b border pa5 radius-capsule bg-white " data-toggle="buttons">
                <label class="btn fs12 ml0" onclick="discardTankFromInvoice(this)">
                    <input name="options" checked="" type="radio"> @Resource.lblExclude
                </label>
                <label class="btn fs12 active" onclick="includeTankInInvoice(this)">
                    <input name="options" type="radio" onclick="radioChange(this,'fixed-price','custEmail');"> @Resource.btnLabelInclude
                </label>
            </div>
            @*<a href="javascript:void(0);" onclick="discardTankFromInvoice(this)" class="pa right0 color-maroon mt10 mr15 z-index5 discard-schedule" title="Discard Tank Details"><i class="fa fa-times"></i> @Resource.lblDiscard</a>
                <a href="javascript:void(0);" onclick="includeTankInInvoice(this)" class="pa right0 color-green mt10 mr15 z-index5 include-schedule hide-element" title="Include Tank Details"><i class="fa fa-check"></i> @Resource.btnLabelInclude</a>*@
            <div class="row bg-lightgrey pt15 mb15 radius-5">
                <div class="col-sm-12">
                    <h4 class="pt0 fs16 dib">@Resource.lblTankDetails</h4>
                    <div class="row">
                        <div class="col-sm-2">
                            <label>Rent From</label>
                            @Html.TextBoxFor(m => m.StartDate, new { @class = "form-control datepicker start-date" })
                            @Html.ValidationMessageFor(m => m.StartDate)
                        </div>
                        <div class="col-sm-2">
                            <label>Rent Till</label>
                            @Html.TextBoxFor(m => m.EndDate, new { @class = "form-control datepicker end-date" })
                            @Html.ValidationMessageFor(m => m.EndDate)
                        </div>
                    </div>
                    <div class="row mt10">
                        <div class="col-sm-2">
                            <label>@Resource.gridColumnDesciption</label>
                            @Html.TextBoxFor(m => m.Description, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                        <div class="col-sm-2">
                            <label>Rental Rate</label>
                            <div class="input-group">
                                <div class="input-group-addon">@Model.Currency</div>
                                @Html.TextBox("displayRentalRate", @Model.RentalFee, new { @class = "form-control rental-rate", @disabled = "disabled", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <label>Total Rental</label>
                            <div class="input-group">
                                <div class="input-group-addon">@Model.Currency</div>
                                @Html.TextBoxFor(m => m.RentalFee, new { @class = "form-control datatype-decimal calculated-rental-amount", @readonly = "readonly" })
                                @Html.ValidationMessageFor(m => m.RentalFee)
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                @Html.LabelFor(m => m.FeeTaxDetails.Percentage)
                                <div class="input-group">
                                    <span class="input-group-addon">@Resource.constSymbolPercent</span>
                                    @Html.TextBoxFor(m => m.FeeTaxDetails.Percentage, new { @class = "form-control tax-percentage", placeholder = "Percentage", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(m => m.FeeTaxDetails.Percentage)
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                @Html.LabelFor(m => m.FeeTaxDetails.Amount)
                                <div class="input-group">
                                    <span class="input-group-addon">@Model.Currency</span>
                                    @Html.TextBoxFor(m => m.FeeTaxDetails.Amount, new { @class = "form-control tax-amount", placeholder = "Amount", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(m => m.FeeTaxDetails.Amount)
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                @Html.LabelFor(m => m.FeeTaxDetails.Description)
                                @Html.TextBoxFor(m => m.FeeTaxDetails.Description, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>