@model CarrierViewModel

@Html.HiddenFor(m => m.Id)
@Html.TextBoxFor(m => m.Name, new { @class = "form-control carrier-name", @placeholder = @Resource.lblCarrier })
<script>
    var carrierUrl = "@Url.Action("GetCarriers", "Dispatch", new { area = "Supplier" })";
    $(document).ready(function () {
        autoCompleteTextBox("#@Html.IdFor(m => m.Name)", carrierUrl);
    });
</script>
