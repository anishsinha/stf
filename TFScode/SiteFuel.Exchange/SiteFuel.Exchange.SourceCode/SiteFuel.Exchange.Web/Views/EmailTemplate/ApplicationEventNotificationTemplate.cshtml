@model SiteFuel.Exchange.EmailManager.ApplicationEventNotificationViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800" rel="stylesheet">
    <title>Site Fuel</title>
</head>
<body bgcolor="#f5f5f6" style="font-size: 14px;color:#4a4a4a;font-family:''Open Sans'', sans-serif;padding:0px;margin:0px;">
    <table style="background-color:#f5f5f6;width:100%;"><tr><td valign="top"><table border="0" align="center" cellpadding="0" cellspacing="0" style="width:100%;font-size: 14px;color:#4a4a4a;font-family:''Open Sans'', sans-serif;"><tr><td style="display:block;max-width:@Model.BodyMaxWidth;margin:0 auto;clear:both;" valign="top"><table cellspacing="0" cellpadding="0"><tr><td valign="top" align="left"><img src="@Model.CompanyLogo" style="display:block"></td></tr><tr><td style="background:white;padding-right:75px;padding-left:75px;padding-top:50px;">                                          <table cellspacing="0" cellpadding="0">                                              <tr>                                                  <td style="font-size: 14px;color:#4a4a4a;font-family:''Open Sans'', sans-serif">@(new RazorEngine.Text.RawString(Model.BodyText))</td></tr>@if (!string.IsNullOrWhiteSpace(Model.BodyButtonUrl))
    {<tr><td style="padding-top:20px;padding-bottom:20px;" align="center"><a style="font-family: ''Open Sans'', sans-serif;background-color: #1bbb9e;color:white;border: none;padding:5px 10px 5px 10px;border-radius:2px;font-size: 14px;box-shadow: 1px 2px 3px #9b9b9b; text-decoration:none;" href="@Model.BodyButtonUrl">@Model.BodyButtonText</a></td></tr>}@if (Model.ShowHelpLineInfo)
    {<tr><td style="padding-top:25px;"><p style="font-size: 14px;color:#4a4a4a;font-family:''Open Sans'', sans-serif;">If you have any questions, please email us at</p><p style="margin-top:20px;font-size: 14px;font-family:''Open Sans'', sans-serif;"><a href="mailto:helpdesk@sitefuelusa.com?Subject=Help%20Needed" style="color: #2d8ecb;">helpdesk@sitefuelusa.com</a></p><p style="margin-top:20px;padding-bottom:25px;margin-bottom:70px;font-size: 14px;color:#4a4a4a;font-family:''Open Sans'', sans-serif;">Thank you,<br>The Site Fuel Team</p></td></tr>}</table></td></tr></table></td></tr><tr><td style="display:block;max-width:400px;margin:0 auto;">@if (Model.ShowFooterContent)
    {
        if (Model.ShowUserSettingsLink == true)
        {<p style="margin-top:13px;margin-bottom:0px;color:#9b9b9b;font-size: 11px !important;text-align: center;line-height: 17px;">You''re receiving this notification because you have signed up for Site Fuel alerts & notification. You can change these settings in your <a href="@Model.ServerUrl/Settings/Profile/UserNotifications" style="color:#acacac;">user settings</a>.<br></p>}
        else
        {<p style="margin-top:13px;margin-bottom:0px;color:#acacac;font-size: 11px !important;text-align: center;line-height: 17px;">You''re receiving this notification because you have signed up for Site Fuel.</p>}
    }<p style="margin-top:5px;color:#9b9b9b;font-size: 11px !important;text-align: center;margin-bottom:25px;" id="dynamic-footer-text"> &copy; 2022 TrueFill, Inc.</p></td></tr></table></td></tr></table>
</body>
</html>
